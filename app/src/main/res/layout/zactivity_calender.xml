<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/gray">

        <Button
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray"
            android:drawableLeft="@drawable/left"
            android:text="2021년 5월"
            android:textSize="15sp"
            android:textStyle="bold" />

        <View
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <View
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <View
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@id/magnifier"
            android:backgroundTint="@color/gray"
            android:scaleType="fitCenter"
            android:src="@drawable/iconfinder_menu" />

        <ImageButton
            android:id="@+id/magnifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/plus"
            android:backgroundTint="@color/gray"
            android:scaleType="fitCenter"
            android:src="@drawable/magnifier" />

        <ImageButton
            android:id="@+id/plus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/gray"
            android:scaleType="fitCenter"
            android:src="@drawable/iconfinder_addplus" />
    </LinearLayout>

    <TableRow
        android:id="@+id/days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/start"
        android:background="@color/gray"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:text="일"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="월" />

        <TextView
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="화" />

        <TextView
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="수" />

        <TextView
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="목" />

        <TextView
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="금" />

        <TextView
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="토" />
    </TableRow>

    <TableRow
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/days"
        android:background="#474646"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:backgroundTint="@color/black" />

        <TextView
            android:layout_weight="1"
            android:backgroundTint="@color/black" />

        <TextView
            android:layout_weight="1"
            android:backgroundTint="@color/black" />

        <TextView
            android:layout_weight="1"
            android:backgroundTint="@color/black" />

        <TextView
            android:layout_weight="1"
            android:backgroundTint="@color/black" />

        <TextView
            android:layout_weight="1"
            android:backgroundTint="@color/black" />

        <Button
            android:layout_weight="1"
            android:backgroundTint="#474646"
            android:text="1" />
    </TableRow>

    <TableRow
        android:id="@+id/second"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first"
        android:background="#474646"
        android:orientation="horizontal">

        <Button
            android:layout_weight="1"
            android:backgroundTint="#474646"
            android:text="2" />

        <Button
            android:layout_weight="1"
            android:backgroundTint="#474646"
            android:text="3" />

        <Button
            android:layout_weight="1"
            android:backgroundTint="#474646"
            android:text="4" />

        <Button
            android:layout_weight="1"
            android:backgroundTint="#474646"
            android:text="5" />

        <Button
            android:layout_weight="1"
            android:backgroundTint="#474646"
            android:text="6" />

        <Button
            android:layout_weight="1"
            android:backgroundTint="#474646"
            android:text="7" />

        <Button
            android:layout_weight="1"
            android:backgroundTint="#474646"
            android:text="8" />
    </TableRow>

    <TableRow
        android:id="@+id/third"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_below="@id/second"
        android:background="#474646"
        android:orientation="horizontal">

        <Button
            android:layout_weight="1"
            android:backgroundTint="#474646"
            android:text="9" />

        <Button
            android:layout_weight="1"
            android:backgroundTint="#474646"
            android:text="10" />

        <Button
            android:layout_weight="1"
            android:backgroundTint="#474646"
            android:text="11" />

        <Button
            android:layout_weight="1"
            android:backgroundTint="#474646"
            android:text="12" />

        <Button
            android:layout_weight="1"
            android:backgroundTint="#474646"
            android:text="13" />

        <Button
            android:layout_weight="1"
            android:backgroundTint="#474646"
            android:text="14" />

        <Button
            android:layout_weight="1"
            android:backgroundTint="#474646"
            android:text="15" />
    </TableRow>

    <TableRow
        android:id="@+id/fourth"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/third"
        android:background="#474646"
        android:orientation="horizontal">

        <Button
            android:layout_weight="1"
            android:backgroundTint="#474646"
            android:text="16" />

        <Button
            android:layout_weight="1"
            android:backgroundTint="#474646"
            android:text="17" />

        <Button
            android:layout_weight="1"
            android:backgroundTint="#474646"
            android:text="18" />

        <Button
            android:layout_weight="1"
            android:backgroundTint="#474646"
            android:text="19" />

        <Button
            android:layout_weight="1"
            android:backgroundTint="#474646"
            android:text="20" />

        <Button
            android:layout_weight="1"
            android:backgroundTint="#474646"
            android:text="21" />

        <Button
            android:layout_weight="1"
            android:backgroundTint="#474646"
            android:text="22" />
    </TableRow>

    <TableRow
        android:id="@+id/fifth"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fourth"
        android:background="#474646"
        android:orientation="horizontal">

        <Button
            android:layout_weight="1"
            android:backgroundTint="#474646"
            android:text="23" />

        <Button
            android:layout_weight="1"
            android:backgroundTint="#474646"
            android:text="24" />

        <Button
            android:layout_weight="1"
            android:backgroundTint="#474646"
            android:text="25" />

        <Button
            android:layout_weight="1"
            android:backgroundTint="#474646"
            android:text="26" />

        <Button
            android:layout_weight="1"
            android:backgroundTint="#474646"
            android:text="27" />

        <Button
            android:layout_weight="1"
            android:backgroundTint="#474646"
            android:text="28" />android:backgroundTint="#474646"

        <Button
            android:layout_weight="1"
            android:backgroundTint="#474646"
            android:text="29" />
    </TableRow>

    <TableRow
        android:id="@+id/last"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fifth"
        android:background="#474646"
        android:orientation="horizontal">

        <Button
            android:layout_weight="1"
            android:backgroundTint="#474646"
            android:text="30" />

        <Button
            android:layout_weight="1"
            android:backgroundTint="#474646"
            android:text="31" />

        <TextView
            android:layout_weight="1"
            android:backgroundTint="@color/black" />

        <TextView
            android:layout_weight="1"
            android:backgroundTint="@color/black" />

        <TextView
            android:layout_weight="1"
            android:backgroundTint="@color/black" />

        <TextView
            android:layout_weight="1"
            android:backgroundTint="@color/black" />

        <TextView
            android:layout_weight="1"
            android:backgroundTint="@color/black" />
    </TableRow>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/last"
        android:gravity="center"
        android:text="이벤트 없음"
        android:textColor="@color/gray"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#474646"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#474646"
            android:gravity="start"
            android:text="오늘"
            android:textColor="#F61504" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#474646"
            android:gravity="center_horizontal"
            android:text="캘린더"

            android:textColor="#F61504" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#474646"
            android:gravity="end"
            android:text="초대"
            android:textAlignment="textEnd"

            android:textColor="#F61504" />


    </LinearLayout>


</RelativeLayout>



